{
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 75,
            "lines": 80,
            "statements": 80
        }
    },
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/database/migrations/*.js"
    ],
    "reporters": [
        "default"
    ],
    "testMatch": [
        "**/?(*.)(spec).js?(x)"
    ],
    "testPathIgnorePatterns": [
        "<rootDir>/node_modules"
    ]
}